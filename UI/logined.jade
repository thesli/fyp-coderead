body
    nav.navbar.navbar-default(role='navigation')
        //
             Brand and toggle get grouped for better mobile display
        .navbar-header
            button.navbar-toggle(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
            a.navbar-brand(href='#') Home
        //
           Collect the nav links, forms, and other content for toggling
        #bs-example-navbar-collapse-1.collapse.navbar-collapse.alert-warning
            ul.nav.navbar-nav
                li.alert-danger
                    a(href='http://hk.yahoo.com') Events
                li
                    a(href='group.html') Group
                li.dropdown
                    a.dropdown-toggle(href='#', data-toggle='dropdown')
                        | #username
                        b.caret
                    ul.dropdown-menu
                        li
                            a(href='#') Notification
                        li.divider
                        li
                            a(href='#') My Events
                        li.divider
                form.navbar-form.navbar-left(role='search events')
                    .form-group
                        input.form-control(type='text', placeholder='Search Events')
                    button.btn.btn-default(type='submit') Submit
            ul.nav.navbar-nav.navbar-right

                li.dropdown
                    a.dropdown-toggle(href='#', data-toggle='dropdown')
                        | Settings
                        b.caret
                    ul.dropdown-menu
                        li
                            a(href='#') Personal Settings
                        li
                            a(href='#') Privacy Settings
                        li.divider
                        li
                            a(href='#') Log out
